<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h3 class="m-0 font-weight-bold text-danger float-left">Edit A Car</h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <!-- Success Alert -->
        <%if session[:success] %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <div>
              <%= session[:success] %>
            </div>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <!-- Clear the flash message -->
          <% session[:success] = nil %>
        <% end %>
      </div>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <div class="mb-3 row">
          <label for="username" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input type="text" id="name" class="form-control-plaintext" readonly value="<%= current_profile['name'] %>" />
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="mb-3 row">
          <label for="username" class="col-sm-2 col-form-label">Username</label>
          <div class="col-sm-10">
            <input type="text" id="username" class="form-control-plaintext" readonly value="<%= current_profile['username'] %>" />
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="mb-3 row">
          <label for="username" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="text" id="email" class="form-control-plaintext" readonly value="<%= current_profile['email'] %>" />
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="mb-3 row">
          <label for="username" class="col-sm-2 col-form-label">Age</label>
          <div class="col-sm-10">
            <input type="text" id="email" class="form-control-plaintext" readonly value="<%= current_profile['age'] %>" />
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="mb-3 row">
          <label for="username" class="col-sm-2 col-form-label">Phone</label>
          <div class="col-sm-10">
            <input type="text" id="photo" class="form-control-plaintext" readonly value="<%= current_profile['phone'] %>" />
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="mb-3 row">
          <label for="username" class="col-sm-2 col-form-label">Country</label>
          <div class="col-sm-10">
            <input type="text" id="country" class="form-control-plaintext" readonly value="<%= current_profile['country'] %>" />
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="mb-3 row">
          <label for="username" class="col-sm-2 col-form-label">Photo</label>
          <div class="col-sm-10">
            <img src="/uploads/<%= current_profile['photo'] %>" class="img-thumbnail" id="img-admin" alt="Admin Profile" style="width: 20%" />
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
