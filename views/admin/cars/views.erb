<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h2 class="m-0 font-weight-bold text-primary float-left">Car Lists</h2>
    <a href="/add_car" class="btn btn-success float-right">++ Add</a>
  </div>
  <div class="card-body">
    <!-- Success Alert -->
    <%if session[:success] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <div><%= session[:success] %></div>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <!-- Clear the flash message -->
    <% session[:success] = nil %> <% end %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Type</th>
            <th>Brand</th>
            <th>Transmission</th>
            <th>Seat</th>
            <th>Machine</th>
            <th>Power</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Manufacture</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @cars.each_with_index do |car, index| %>
          <tr>
            <!-- Iteration number starts from 1 -->
            <td><%= index + 1 %></td>
            <td><%= car['name'] %></td>
            <td><%= car['type'] %></td>
            <td><%= car['brand'] %></td>
            <td><%= car['transmission'] %></td>
            <td><%= seat(car['seat'] ) %></td>
            <td><%= machine(car['machine']) %></td>
            <td><%= power(car['power']) %></td>
            <td>
              <% if car['photo'] %>
              <img src="/uploads/<%= car['photo'] %>" alt="<%= car['name'] %>" style="max-width: 300px" />
              <% else %> <% end %>
            </td>
            <td><%= format_rupiah((car['price'])) %></td>
            <td><%= car['stock'] %></td>
            <td><%= car['manufacture'] %></td>
            <td>
              <div class="btn-group" role="group">
                <a href="#" class="btn btn-info">Edit</a>
                <button type="submit" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="">Delete</button>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
