<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-danger float-left">Edit Admin Profile</h6>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col">
        <% if @errors&.any? %> <% @errors.each do |error| %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <div><%= error %></div>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
        </div>
        <% end %> <% end %>
      </div>
    </div>

    <form action="/profiles/<%= @profile['id']%>/edit" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <input type="hidden" name="_method" value="post" />
      </div>
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= @profile['name'] %>" />
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="username" value="<%= @profile['username'] %>" />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= @profile['email'] %>" />
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="number" class="form-control" id="phone" name="phone" value="<%= @profile['phone'] %>" />
      </div>
      <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="number" class="form-control" id="age" name="age" value="<%= @profile['age'] %>" />
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <select class="form-control" id="country" name="country">
          <option selected value="<%= @profile['country'] %>"><%= @profile['country'] %></option>
          <option value="Indonesia">Indonesia</option>
          <option value="Malaysia">Malaysia</option>
          <option value="Singapore">Singapore</option>
          <option value="Thailand">Thailand</option>
          <option value="Brunei Darussalam">Brunei Darussalam</option>
          <option value="Philipine">Philipine</option>
          <option value="Cambodia">Cambodia</option>
          <option value="Vietnam">Vietnam</option>
          <option value="Japan">Japan</option>
          <option value="Laos">Laos</option>
          <option value="South Korea">South Korea</option>
          <option value="China">China</option>
          <option value="Australia">Australia</option>
          <option value="England">England</option>
          <option value="France">France</option>
          <option value="Canada">Canada</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="photo" class="form-label">Photo</label>
        <% if @profile['photo'] %>
        <img src="/uploads/<%= @profile['photo'] %>" class="img-thumbnail" alt="<%= @profile['name'] %>" style="max-width: 200px" />
        <% end %>
        <input type="file" class="form-control" id="photo" name="photo" />
      </div>
      <button type="submit" class="btn btn-primary float-right">Submit</button>
      <a class="btn btn-secondary float-left" href="/admin_profile">Back</a>
    </form>
  </div>
</div>
