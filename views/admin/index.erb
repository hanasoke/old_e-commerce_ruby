<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">User Lists</h6>
  </div>
  <div class="card-body">
    <!-- Success Alert -->
    <%if session[:success] %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <div><%= session[:success] %></div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <!-- Clear the flash message -->
    <% session[:success] = nil %> 
    <% end %>

    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Age</th>
            <th>Phone Number</th>
            <th>Country</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @profiles.each_with_index do |profile, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= profile['name'] %></td>
            <td><%= profile['username'] %></td>
            <td><%= profile['email'] %></td>
            <td><%= profile['age'] %></td>
            <td><%= profile['phone'] %></td>
            <td><%= profile['country']%></td>
            <td>
              <% if profile['photo'] %>
              <img src="/uploads/<%= profile['photo'] %>" alt="<%= profile['name'] %>" style="max-width: 300px" />
              <% else %>
              <p>No Photo Available</p>
              <% end %>
            </td>
            <td>
              <div class="btn-group" role="group">
                <a href="/users/<%= profile['id'] %>/edit" class="btn btn-info">Edit</a>

                <!-- Delete Button triggers the modal -->
                <button type="submit" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#">Delete</button>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
