<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h2 class="m-0 font-weight-bold text-primary float-left">Car Lists</h2>
    <a href="/add_car" class="btn btn-success float-right">++ Add</a>
  </div>
  <div class="card-body">
    <!-- Success Alert -->
    <%if session[:success] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <div><%= session[:success] %></div>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <!-- Clear the flash message -->
    <% session[:success] = nil %> <% end %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>User</th>
            <th>Car Name</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Payment Method</th>
            <th>Account Number</th>
            <th>Payment Status</th>
            <th>Payment Photo</th>
            <th>Admin Approved</th>
            <th>Transaction Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @transactions.each_with_index do |transaction, index| %>
          <tr>
            <!-- Iteration number starts from 1 -->
            <td><%= index + 1 %></td>
            <td><% profile = DB.get_first_row("SELECT name FROM profiles WHERE id = ?", [transaction['profile_id']]) %> <%= profile ? profile['name'] : 'No profile found' %></td>
            <td><% car = DB.get_first_row("SELECT name FROM cars WHERE id = ?", [transaction['car_id']]) %> <%= car ? car['name'] : 'No profile found' %></td>
            <td><%= transaction['quantity'] %></td>
            <td><%= transaction['total_price'] %></td>
            <td><%= transaction['payment_method'] %></td>
            <td><%= transaction['account_number'] %></td>
            <td><%= transaction['payment_status'] %></td>
            <td>
              <img src="/uploads/payments/<%= transaction['payment_photo'] %>" alt="<%= transaction['name'] %>" style="width: 30%" />
            </td>
            <td><%= transaction['admin_approved'] %></td>
            <td><%= transaction['transaction_date'] %></td>
            <td>
              <div class="btn-group" role="group" aria-label="Basic example">
                <a href="/transaction_edit/<%= transaction['id']%>" class="btn btn-info">Edit</a>
                <button type="submit" class="btn btn-danger">Delete</button>
              </div>
              <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteModal<%= car['id']%>" aria-labelledby="deleteModalLabel<%= car['id']%>" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="deleteModalLabel<%= car['id']%>">Confirm Deletion</h1>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">x</button>
                      </div>
                      <div class="modal-body mb-3">Are you sure want to delete this Car ?</div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <form action="/cars/<%= car['id'] %>/delete" method="POST">
                          <button class="btn btn-primary" type="submit">Delete</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
