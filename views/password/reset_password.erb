<!-- Outer Row -->
<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card 0-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row Within Card Body -->
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block gambar"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Reset Password</h1>
              </div>
              <% if @errors&.any? %> 
                <% @errors.each do |error|%>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <div><%= error %></div>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <% end %> 
              <% end %>

              <form class="user" action="/reset_password" method="post">
                <input type="hidden" class="form-control form-control-user" name="reset_token" value="<%= @reset_token %>" />
                <div class="form-group">
                  <input type="password" class="form-control form-control-user" name="password" id="password" placeholder="Enter New Password" value="<%= params[:password]%>" />
                </div>
                <div class="form-group">
                  <input type="password" class="form-control form-control-user" name="re_password" id="re_password" placeholder="Confirm new Password" value="<%= params[:re_password]%>" />
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">Reset Password</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
