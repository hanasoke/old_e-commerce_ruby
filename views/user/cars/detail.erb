<div class="container">
  <div class="row my-5">
    <div class="col">
      <div class="card">
        <img src="/uploads/cars/<%= @car['photo'] %>" class="card-img-top" alt="<%= @car['name'] %>" />
        <div class="card-body">
          <div class="mb-3 row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" id="name" value="<%= @car['name'] %>" />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="brand" class="col-sm-2 col-form-label">Brand</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="brand" value="<%= @car['brand'] %>" />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="color" class="col-sm-2 col-form-label">Color</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="color" value="<%= @car['color'] %>" />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="transmission" class="col-sm-2 col-form-label">Transmission</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="transmission" value="<%= @car['transmission'] %>" />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="price" class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="price" value="<%= format_rupiah(@car['price']) %>" />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="manufacture" class="col-sm-2 col-form-label">Manufacture</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="manufacture" value="<%= @car['manufacture'] %>" />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="seat" class="col-sm-2 col-form-label">Seat</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="seat" value="<%= @car['seat'] %>" />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="stock" class="col-sm-2 col-form-label">Stock</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="stock" value="<%= @car['stock'] %>" />
            </div>
          </div>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-success float-end" data-bs-toggle="modal" data-bs-target="#checkout">Checkout Now</button>

          <a href="/user_page" class="btn btn-outline-secondary float-start">Back</a>

          <!-- Modal -->
          <div class="modal fade" id="checkout" tabindex="-1" aria-labelledby="checkoutNow" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="checkoutNow">Quantity</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form action="/checkout/<%= @car['id'] %>" method="post">
                  <input type="hidden" name="car_id" value="<%= @car['id']%>">
                  <input type="hidden" name="price" value="<%= @car['price']%>">
                  <div class="mb-3">
                    <label for="quantity" class="col-sm-2 col-form-label">Quantity</label>
                    <input type="number" class="form-control" name="quantity" id="quantity" min="1" max="<%= @car['stock']%>" value="0" required />
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-success">Checkout</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
