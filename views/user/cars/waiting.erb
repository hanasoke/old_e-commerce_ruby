<div class="container">
  <div class="row my-5">
    <div class="col">
      <h1>Payment Confirmation</h1>

      <div class="card">
        <div class="card-body">
          <h5>Transaction ID : <%= @transaction['id'] %></h5>
          <p class="card-text">Car Name : <%= @transaction['name'] %></p>
          <p class="card-text">Total Price : <%= format_rupiah(@transaction['total_price']) %></p>
          <p class="card-text">Payment Method : <%= @transaction['payment_method'] %></p>
          <p class="card-text">Account Number : <%= @transaction['account_number'] %></p>
          <p class="card-text">
            <b>Status : <span class="text-warning"><%= @transaction['payment_status'] %></span></b>
          </p>
        </div>

        <div>
          <p>Payment Proof :</p>
          <img src="/uploads/payments/ <%= @transaction['photo'] %>" alt="Payment Proof" class="img-fluid" />
        </div>
        <p class="mt-3 text-muted">Please wait while your payment is being verified.</p>
      </div>
    </div>
  </div>
</div>
