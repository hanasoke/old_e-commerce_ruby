<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h1>Edit <%= current_profile['username']; %> <b>Profile</b></h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @errors&.any? %> 
        <% @errors.each do |error| %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <div><%= error %></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %> 
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <form action="/edit_profile/<%= @profile['id']%>" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <input type="hidden" name="_method" value="post" />
            </div>
            <div class="mb-3 row">
              <label for="name" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="name" id="name" value="<%= @profile['name']; %>" />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="username" class="col-sm-2 col-form-label">Username</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="username" value="<%= @profile['username']; %>" />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="email" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="email" name="email" value="<%= @profile['email']; %>" />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="age" class="col-sm-2 col-form-label">Age</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="age" name="age" value="<%= @profile['age']; %>" />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="country" class="col-sm-2 col-form-label">Country</label>
              <div class="col-sm-10">
                <select name="country" class="form-select" id="country">
                  <option selected value="<%= @profile['country']%>"><%= @profile['country']%></option>
                  <option value="Indonesia">Indonesia</option>
                  <option value="Malaysia">Malaysia</option>
                  <option value="Singapore">Singapore</option>
                  <option value="Thailand">Thailand</option>
                  <option value="Brunei Darussalam">Brunei Darussalam</option>
                  <option value="Philipine">Philipine</option>
                  <option value="Cambodia">Cambodia</option>
                  <option value="Vietnam">Vietnam</option>
                  <option value="Japan">Japan</option>
                  <option value="Laos">Laos</option>
                  <option value="South Korea">South Korea</option>
                  <option value="China">China</option>
                  <option value="Australia">Australia</option>
                  <option value="England">England</option>
                  <option value="France">France</option>
                  <option value="Canada">Canada</option>
                  <option value="Nepal">Nepal</option>
                  <option value="Bangladesh">Bangladesh</option>
                  <option value="India">India</option>
                  <option value="Qatar">Qatar</option>
                </select>
              </div>
            </div>
            <div class="mb-3 row">
              <label for="photo" class="col-sm-2 col-form-label">Photo Profile</label>
              <div class="col-sm-10">
                <% if @profile['photo'] %>
                <img class="mb-3" src="/uploads/<%= @profile['photo']; %>" alt="<%= @profile['name']; %>" style="width: 100px" />
                <% end %>
                <input type="file" class="form-control" name="photo" id="photo" />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="phone" class="col-sm-2 col-form-label">Phone Number</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="phone" id="phone" value="<%= @profile['phone']; %>" />
              </div>
            </div>
            <button type="submit" class="btn btn-success float-end">Submit</button>
          </form>
          <a href="/user_profile" class="btn btn-outline-dark">Back</a>
        </div>
      </div>
    </div>
  </div>
</div>
