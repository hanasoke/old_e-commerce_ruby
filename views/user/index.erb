<div class="container mt-3">
  <div class="row">
    <div class="col">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/img/BWD_1.jpg" class="d-block w-100 img-thumbnail rounded" alt="BWD 1" />
          </div>
          <div class="carousel-item">
            <img src="/img/BWD_2.jpg" class="d-block w-100 img-thumbnail rounded" alt="BWD 2" />
          </div>
          <div class="carousel-item">
            <img src="/img/BWD_3.jpg" class="d-block w-100 img-thumbnail rounded" alt="BWD 3" />
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h1>Welcome <%= current_profile['username'] %></h1>
    </div>
  </div>
  <% @cars.each do |car| %>
  <div class="row">
    <div class="col">
      <div class="card mb-3">
        <img src="/uploads/cars/<%= car['photo'] %>" class="card-img-top" alt="<%= car['name']%>" />
        <div class="card-body">
          <h5 class="card-title"><%= car['name']%></h5>
          <p class="card-text">
            <b>Description</b>
            <br />
            Brand : <%= car['brand']%>
            <br />
            Color : <%= car['color'] %>
            <br />
            Transmission : <%= car['transmission'] %>
            <br />
            Price : <%= format_rupiah(car['price']) %>
          </p>
          <a href="#" class="btn btn-primary float-end">Detail</a>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
