<div class="container my-3">
  <div class="row">
    <div class="col">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/img/BWD_1.jpg" class="d-block w-100 img-thumbnail rounded" alt="BWD 1" />
          </div>
          <div class="carousel-item">
            <img src="/img/BWD_Middle.jpg" class="d-block w-100 img-thumbnail rounded" alt="BWD Middle" />
          </div>
          <div class="carousel-item">
            <img src="/img/BWD_3.jpg" class="d-block w-100 img-thumbnail rounded" alt="BWD 3" />
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <h1>List of Cars</h1>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <% @cars.each_with_index do |car, index| %> 
    <% if index % 3 == 0 && index != 0 %>
      </div>
      <div class="row">
    <% end %>

    <div class="col-md-4 mb-4">
      <div class="card mb-3">
        <img src="/uploads/cars/<%= car['photo'] %>" class="card-img-top" alt="<%= car['name']%>" />
        <div class="card-body">
          <h5 class="card-title"><%= car['name']%></h5>
          <ul class="list-group">
            <li class="list-group-item">
              <b>Description</b>
            </li>
            <li class="list-group-item">
              Brand : <%= car['brand']%>
            </li>
            <li class="list-group-item">
              Color : <%= car['color'] %>
            </li>
            <li class="list-group-item">
              Transmission : <%= car['transmission'] %>
            </li>
            <li class="list-group-item">
              Price : <%= format_rupiah(car['price']) %>
            </li>
          </ul>
          <a href="/checkout/<%= car['id'] %>" class="btn btn-success mt-3 mx-2">Checkout Now</a>
          <a href="/detail_car/<%= car['id'] %>" class="btn btn-primary float-end mt-3">Detail</a>
          <a href="/wishlist/<%= car['id'] %>" class="btn btn-danger mt-3 float-start"><i class="fa-regular fa-heart"></i> Add to wishlist</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
