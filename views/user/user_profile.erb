<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h1><%= current_profile['username']; %> <b>Profile</b></h1>
    </div>
    <div class="col mt-5">
      <a href="/edit_profile/<%= current_profile['id'] %>" class="btn btn-info float-end">Edit My Profile</a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <!-- Success Alert -->
      <%if session[:success] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <div><%= session[:success] %></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <!-- Clear the flash message -->
        <% session[:success] = nil %> 
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="card my-3">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/uploads/<%= current_profile['photo'] %>" class="img-fluid rounded-start" alt="<%= current_profile['name'] %>" />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <div class="list-group list-group-flush">
                <div class="list-group-item">
                  <div class="mb-3 row">
                    <label for="username" class="col-sm-2 col-form-label">username</label>
                    <div class="col-sm-10">
                      <input type="text" readonly class="form-control-plaintext" name="username" id="username" value="<%= current_profile['username']; %>" />
                    </div>
                  </div>
                </div>
                <div class="list-group-item">
                  <div class="mb-3 row">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                      <input type="text" readonly class="form-control-plaintext" name="name" id="name" value="<%= current_profile['name']; %>" />
                    </div>
                  </div>
                </div>
                <div class="list-group-item">
                  <div class="mb-3 row">
                    <label for="age" class="col-sm-2 col-form-label">Age</label>
                    <div class="col-sm-10">
                      <input type="text" readonly class="form-control-plaintext" name="age" id="age" value="<%= current_profile['age']; %>" />
                    </div>
                  </div>
                </div>
                <div class="list-group-item">
                  <div class="mb-3 row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                      <input type="text" readonly class="form-control-plaintext" name="email" id="email" value="<%= current_profile['email']; %>" />
                    </div>
                  </div>
                </div>
                <div class="list-group-item">
                  <div class="mb-3 row">
                    <label for="phone" class="col-sm-2 col-form-label">Phone Number</label>
                    <div class="col-sm-10">
                      <input type="text" readonly class="form-control-plaintext" name="phone" id="phone" value="<%= current_profile['phone']; %>" />
                    </div>
                  </div>
                </div>
                <div class="list-group-item">
                  <div class="mb-3 row">
                    <label for="country" class="col-sm-2 col-form-label">Country</label>
                    <div class="col-sm-10">
                      <input type="text" readonly class="form-control-plaintext" name="country" id="country" value="<%= current_profile['country']; %>" />
                    </div>
                  </div>
                </div>
              </div>
              <a href="/user_page" class="btn btn-outline-dark float-end">Back</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
